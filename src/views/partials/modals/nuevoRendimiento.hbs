<div class="modal fade bd-example-modal-sm" id="modalNewRendimiento" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered" style="max-width: 500px;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nuevo Rendimiento</h5>
                <button type="button" class="close" data-dismiss="modal"><span>Ã—</span></button>
            </div>
            <form action="/nuevoRendimiento" method="post">
                <div class="modal-body">
                        <input type="hidden" name="codigo" value="{{datos.code}}">
                        <div class="form-group col-md-12 pt-2">
                            <label for="total-ventas">Total de Ventas</label>
                            <input type="text" class="form-control inputTotales_ required" id="total-ventas" name="total_ventas" required>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="total-compras">Total de Compras</label>
                            <input type="text" class="form-control inputTotales_ required" id="total-compras" name="total_compras" required>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="total-gastos">Total de Gastos</label>
                            <input type="text" class="form-control inputTotales_ required" id="total-gastos" name="total_gastos" required>
                        </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn color_gradient text-white" 
                    style="display: inline-block;">Guardar</button>
                    <button type="button" class="btn color_tertiary text-white" data-dismiss="modal"
                    style="display: inline-block;">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>

